<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19.3/owo-ui.xsd">
    <components>
        <!-- Screen -->
        <flow-layout direction="vertical">
            <children>

                <flow-layout direction="horizontal">
                    <children>
                        <!-- Entity Modal -->
                        <flow-layout direction="vertical" id="entity">
                            <children>

                            </children>
                            <surface>
                                <vanilla-translucent />
                            </surface>
                            <horizontal-alignment>center</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>
                            <sizing>
                                <horizontal method="fill">30</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>
                        </flow-layout>

                        <!-- Input Data -->
                        <flow-layout direction="horizontal">
                            <children>
                                <scroll direction="vertical">
                                    <flow-layout direction="vertical" id="input_data">
                                        <children></children>
                                        <gap>6</gap>
                                        <padding>
                                            <all>10</all>
                                        </padding>
                                    </flow-layout>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fill">100</vertical>
                                    </sizing>
                                </scroll>
                            </children>
                            <surface>
                                <vanilla-translucent />
                            </surface>
                            <horizontal-alignment>center</horizontal-alignment>
                            <sizing>
                                <horizontal method="fill">40</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>
                        </flow-layout>

                        <!-- Checkbox Data -->
                        <flow-layout direction="horizontal">
                            <children>
                                <scroll direction="vertical">
                                    <flow-layout direction="vertical" id="checkbox_data">
                                        <children></children>
                                        <padding>
                                            <all>5</all>
                                        </padding>
                                    </flow-layout>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fill">100</vertical>
                                    </sizing>
                                </scroll>
                            </children>
                            <surface>
                                <vanilla-translucent />
                            </surface>
                            <sizing>
                                <horizontal method="fill">28</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>

                        </flow-layout>

                    </children>
                    <gap>5</gap>
                    <sizing>
                        <horizontal method="fill">90</horizontal>
                        <vertical method="fill">80</vertical>
                    </sizing>
                </flow-layout>

                <button id="apply">
                    <text>Apply</text>
                </button>

            </children>
            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
            <gap>5</gap>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>

    </components>
</owo-ui>