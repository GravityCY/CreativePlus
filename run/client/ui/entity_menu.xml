<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19.3/owo-ui.xsd">
    <components>
        <!-- Screen -->
        <flow-layout direction="vertical">
            <children>
                <!-- Modal  -->
                <flow-layout id="modal" direction="horizontal">
                    <children>
                        <scroll direction="vertical">
                            <grid-layout rows="100" columns="5" id="entities">
                                <children>
                                </children>
                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                    <vertical method="content">100</vertical>
                                </sizing>
                            </grid-layout>
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>
                        </scroll>
                    </children>
                    <sizing>
                        <horizontal method="fill">50</horizontal>
                        <vertical method="fill">80</vertical>
                    </sizing>
                    <gap>3</gap>
                    <padding>
                        <all>10</all>
                    </padding>
                    <surface>
                        <flat>#22000000</flat>
                    </surface>
                </flow-layout>
            </children>
            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>

    </components>
</owo-ui>