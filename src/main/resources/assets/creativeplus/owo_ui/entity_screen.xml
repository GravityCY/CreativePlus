<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19.3/owo-ui.xsd">
    <components>
        <!-- Screen -->
        <flow-layout direction="vertical">
            <children>
                <!-- Modal  -->
                <flow-layout id="modal" direction="vertical">
                    <children>
                        <!-- Display Name -->
                        <flow-layout direction="horizontal">
                            <children>
                                <flow-layout id="entity_holder" direction="horizontal">
                                    <children>
                                    </children>
                                    <sizing>
                                        <horizontal method="fixed">40</horizontal>
                                        <vertical method="fixed">40</vertical>
                                    </sizing>
                                    <horizontal-alignment>center</horizontal-alignment>
                                    <vertical-alignment>center</vertical-alignment>
                                </flow-layout>
                                <flow-layout direction="vertical">
                                    <children>
                                        <label>
                                            <text>Display Name</text>
                                        </label>
                                        <text-box id="display_name">
                                            <sizing>
                                                <horizontal method="fixed">118</horizontal>
                                                <vertical method="fill">50</vertical>
                                            </sizing>
                                            <vertical-alignment>top</vertical-alignment>
                                            <max-length>128</max-length>
                                        </text-box>
                                    </children>
                                    <horizontal-alignment>center</horizontal-alignment>
                                    <vertical-alignment>center</vertical-alignment>
                                </flow-layout>
                            </children>
                            <horizontal-alignment>center</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>
                            <sizing>
                                <horizontal method="fixed">160</horizontal>
                                <vertical method="fixed">40</vertical>
                            </sizing>
                        </flow-layout>
                        <!-- Checkbox Buttons -->
                        <flow-layout direction="vertical">
                            <children>
                                <!-- Outline Top -->
                                <flow-layout direction="vertical">
                                    <children></children>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fixed">1</vertical>
                                    </sizing>
                                    <surface>
                                        <flat>#333333</flat>
                                    </surface>
                                </flow-layout>
                                <!-- Invisible -->
                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text>Invisible</text>
                                        </label>
                                        <checkbox id="invisible"/>
                                    </children>
                                    <horizontal-alignment>right</horizontal-alignment>
                                    <vertical-alignment>center</vertical-alignment>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fixed">20</vertical>
                                    </sizing>
                                </flow-layout>
                                <!-- Custom Name Visible -->
                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text>Custom Name Visible</text>
                                        </label>
                                        <checkbox id="custom_name_visible" />
                                    </children>
                                    <gap>2</gap>
                                    <horizontal-alignment>right</horizontal-alignment>
                                    <vertical-alignment>center</vertical-alignment>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fixed">20</vertical>
                                    </sizing>
                                </flow-layout>
                                <!-- No Gravity -->
                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text>No Gravity</text>
                                        </label>
                                        <checkbox id="no_gravity" />
                                    </children>
                                    <gap>2</gap>
                                    <horizontal-alignment>right</horizontal-alignment>
                                    <vertical-alignment>center</vertical-alignment>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fixed">20</vertical>
                                    </sizing>
                                </flow-layout>
                                <!-- Outline Bottom -->
                                <flow-layout direction="vertical">
                                    <children></children>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fixed">1</vertical>
                                    </sizing>
                                    <surface>
                                        <flat>#333333</flat>
                                    </surface>
                                </flow-layout>
                            </children>
                            <margins>
                                <top>5</top>
                            </margins>
                            <horizontal-alignment>right</horizontal-alignment>
                            <gap>7</gap>
                        </flow-layout>
                        <!-- Bottom Buttons-->
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="place">
                                    <text>Place</text>
                                    <tooltip-text>Enter Place Mode</tooltip-text>
                                </button>
                                <buttonlist id="mode">
                                    <tooltip-text>Sets the mode</tooltip-text>
                                    <entries>
                                        <text>EXECUTE</text>
                                        <text>CLIPBOARD</text>
                                    </entries>
                                </buttonlist>
                                <button>
                                    <horizontal-alignment>right</horizontal-alignment>
                                    <text>Save</text>
                                    <tooltip-text>Saves as a preset</tooltip-text>
                                </button>
                            </children>
                            <gap>5</gap>
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="fixed">38</vertical>
                            </sizing>
                            <vertical-alignment>bottom</vertical-alignment>
                            <horizontal-alignment>left</horizontal-alignment>
                        </flow-layout>
                    </children>
                    <horizontal-alignment>center</horizontal-alignment>
                    <gap>3</gap>
                    <padding>
                        <all>10</all>
                    </padding>
                    <sizing>
                        <horizontal method="fixed">200</horizontal>
                        <vertical method="fixed">200</vertical>
                    </sizing>
                    <surface>
                        <flat>#22000000</flat>
                    </surface>
                </flow-layout>
            </children>
            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>center</vertical-alignment>
            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>

    </components>
</owo-ui>